@model IEnumerable<ShowTime.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.theatre.Theatre_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Show_time)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.theatre.Theatre_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Show_time)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Movie_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Movie_id }) |
